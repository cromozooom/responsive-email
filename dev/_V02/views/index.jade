block infoIndex
block indexColor
	include ../config/config

	if site == "default"
		- var indexContainerBg 		= colorPrimaryLightC
		- var indexWrapperCollor 	= colorPrimary

	if site == "fiorentina"
		- var indexContainerBg 		= colorPrimaryLightC
		- var indexWrapperCollor 	= colorPrimary


doctype html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"
html(lang="#{lang}")
	block head
		head
			meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
			//- So that mobile will display zoomed in
			meta(name="viewport" content="width=device-width, initial-scale=1")
			//- enable media queries for windows phone 8 -->
			meta(http-equiv="X-UA-Compatible" content="IE=edge")
			//- disable auto telephone linking in iOS -->
			meta(name="format-detection" content="telephone=no")

			include index/css/css

			//- title email
			title= titleNewsletter
	body(style="margin:0; padding:0;" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" bgcolor="#{indexContainerBg}")
		//- 100% background wrapper
		table(border="0" width="100%" height="100%" cellpadding="0" cellspacing="0")
			tr
				td
					include preHeader
			tr
				td(align="center" valign="top" bgcolor="#{indexContainerBg}")
					br
					//- 600px container (white background)
					//table.container(border="0" width="600" cellpadding="0" cellspacing="0" bgcolor="#{indexWrapperCollor}")
					table.container(border="0" width="600" cellpadding="0" cellspacing="0")
						tr
							td
								block contentMail
			block footer
				//- include footer