block config
	include ../config

doctype html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"
html(lang="#{lang}")
	block head
		head
			meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
			//- So that mobile will display zoomed in
			meta(name="viewport" content="width=device-width, initial-scale=1")
			//- enable media queries for windows phone 8 -->
			meta(http-equiv="X-UA-Compatible" content="IE=edge")
			//- disable auto telephone linking in iOS -->
			meta(name="format-detection" content="telephone=no")

			// 1. RESPONSIVE PART
			// it will be the only CSS part, contained in the final HTML
			// cut and paste in other file temporary
			style
				include ../assets/css/style_col.css
			// 2. CUSTOM PART
			// let this part of css for inline tools
			// use this tool for inline css: (http://templates.mailchimp.com/resources/inline-css/)
			style
				include ../assets/css/myStyle.css
			//- title email
			title= title
	body(style="margin:0; padding:0;" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" bgcolor="#{containerBg}")
		//- 100% background wrapper (grey background)
		table(border="0" width="100%" height="100%" cellpadding="0" cellspacing="0")
			tr
				td
					include preHeader
			tr
				td(align="center" valign="top" bgcolor="#{containerBg}")
					br
					//- 600px container (white background)
					table.container(border="0" width="600" cellpadding="0" cellspacing="0" bgcolor="#{wrapperCollor}")
						include header
						block contentMail
			block footer
				include footer