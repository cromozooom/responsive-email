								span(style="color: #{linkColor}; #{fontS} #{decNone} #{fontSans}")
									span #{Nav05}
					if Nav06
						td(align="center" style="#{padding}")
							a(href="#{NavLink06}?ga_campaign=#{data}#{lang}#{trakingSource}" style="color: #{linkColor}; #{fontS} #{decNone} #{fontSans}")
